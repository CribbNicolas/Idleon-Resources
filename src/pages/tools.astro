<style>
	.main {
		min-height: 100vh;
	}
	
	.hero {
		padding: 4rem 2rem;
		text-align: center;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}
	
	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}
	
	.hero-badge {
		display: inline-block;
		background: rgba(255, 255, 255, 0.2);
		border: 1px solid rgba(255, 255, 255, 0.3);
		border-radius: 50px;
		padding: 0.5rem 1rem;
		margin-bottom: 2rem;
		backdrop-filter: blur(10px);
	}
	
	.badge-text {
		color: white;
		font-size: 0.9rem;
		font-weight: 500;
	}
	
	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		color: white;
		margin: 0 0 1.5rem 0;
		line-height: 1.1;
	}
	
	.highlight {
		background: linear-gradient(135deg, #ff6b6b, #ffd93d);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.hero-description {
		font-size: 1.25rem;
		color: rgba(255, 255, 255, 0.9);
		margin: 0;
		line-height: 1.6;
	}
	
	.content-section {
		padding: 4rem 2rem;
		background: rgba(255, 255, 255, 0.05);
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.intro-section {
		margin-bottom: 4rem;
	}
	
	.intro-card {
		background: rgba(255, 255, 255, 0.1) !important;
		border: 1px solid rgba(255, 255, 255, 0.2) !important;
		backdrop-filter: blur(10px);
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
		max-width: 600px;
		margin: 0 auto;
	}
	
	.intro-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}
	
	.intro-card h2 {
		font-size: 1.75rem;
		font-weight: 600;
		color: white;
		margin: 0 0 1rem 0;
	}
	
	.intro-card p {
		color: rgba(255, 255, 255, 0.8);
		margin: 0;
		line-height: 1.6;
		font-size: 1.1rem;
	}
	
	.tools-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 4rem;
	}
	
	.category-card {
		background: rgba(255, 255, 255, 0.1) !important;
		border: 1px solid rgba(255, 255, 255, 0.2) !important;
		backdrop-filter: blur(10px);
		padding: 1.5rem;
		border-radius: 12px;
		transition: transform 0.3s ease;
		display: flex;
		flex-direction: column;
	}
	
	.category-card:hover {
		transform: translateY(-5px);
		background: rgba(255, 255, 255, 0.15) !important;
	}
	
	.category-header {
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}
	
	.category-icon {
		font-size: 2rem;
		width: 60px;
		height: 60px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		flex-shrink: 0;
	}
	
	.category-info {
		flex: 1;
	}
	
	.category-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: white;
		margin: 0 0 0.5rem 0;
	}
	
	.category-description {
		color: rgba(255, 255, 255, 0.8);
		margin: 0;
		line-height: 1.5;
		font-size: 0.9rem;
	}
	
	.tools-list {
		flex: 1;
		margin-bottom: 1.5rem;
	}
	
	.tool-item {
		padding: 0.75rem 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}
	
	.tool-item:last-child {
		border-bottom: none;
	}
	
	.tool-name {
		font-size: 1rem;
		font-weight: 500;
		color: white;
		margin: 0 0 0.25rem 0;
	}
	
	.tool-description {
		color: rgba(255, 255, 255, 0.7);
		margin: 0;
		font-size: 0.85rem;
		line-height: 1.4;
	}
	
	.category-footer {
		display: flex;
		justify-content: center;
	}
	
	.category-button {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}
	
	.button-arrow {
		transition: transform 0.3s ease;
	}
	
	.category-button:hover .button-arrow {
		transform: translateX(4px);
	}
	
	.features-section {
		margin-bottom: 4rem;
	}
	
	.section-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: white;
		text-align: center;
		margin: 0 0 3rem 0;
	}
	
	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}
	
	.feature {
		background: rgba(255, 255, 255, 0.1);
		border: 1px solid rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(10px);
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
		transition: transform 0.3s ease;
	}
	
	.feature:hover {
		transform: translateY(-5px);
	}
	
	.feature-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}
	
	.feature h3 {
		font-size: 1.25rem;
		font-weight: 600;
